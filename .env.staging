# LexiScan Staging Environment Configuration
# Copy this file to .env.staging.local and customize for your staging environment

# Database Configuration
POSTGRES_PASSWORD=staging_secure_password_change_me
REDIS_PASSWORD=staging_redis_password_change_me

# Application Secrets
SECRET_KEY=staging_secret_key_minimum_32_characters_change_in_production
JWT_SECRET=staging_jwt_secret_minimum_32_characters_change_in_production
NEXTAUTH_SECRET=staging_nextauth_secret_minimum_32_characters_change_in_production

# AI Service API Keys (use your actual keys)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here

# AI Service Configuration
EMBEDDING_PROVIDER=openai
LLM_PROVIDER=anthropic
USE_BEDROCK=false

# Stripe Test Keys (use Stripe test keys for staging)
STRIPE_TEST_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_TEST_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret_here

# Monitoring
GRAFANA_PASSWORD=staging_grafana_admin_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
FROM_EMAIL=noreply@staging.lexiscan.ai

# Feature Flags
FEATURE_FLAGS_ENABLED=true

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Performance
MAX_WORKERS=2
WORKER_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload Limits
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=pdf,docx,txt

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
REMEMBER_ME_DAYS=7

# Security
CORS_ORIGINS=http://localhost:3001,http://localhost:80
TRUSTED_HOSTS=localhost,127.0.0.1,staging.lexiscan.ai

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# Monitoring URLs
SENTRY_DSN=https://your-sentry-dsn-for-staging@sentry.io/project-id
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Domain Configuration (optional)
STAGING_DOMAIN=staging.lexiscan.ai
SSL_ENABLED=false