# ClauseForge Azure Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME="ClauseForge AI Contract Analyzer"
VERSION="0.1.0"
ENVIRONMENT="production"
DEBUG="false"
PORT=8000

# API Configuration
API_V1_STR="/api"
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BASE_URL="https://your-container-app-url.azurecontainerapps.io"

# Database (Azure PostgreSQL Flexible Server)
DATABASE_URL="postgresql+psycopg://cfadmin:YOUR_PASSWORD@clauseforge-db.postgres.database.azure.com:5432/clauseforge"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (Azure Cache for Redis)
REDIS_URL="redis://:YOUR_REDIS_KEY@clauseforge-redis.redis.cache.windows.net:6380/0?ssl=true"
REDIS_HOST="clauseforge-redis.redis.cache.windows.net"
REDIS_PORT=6380
REDIS_PASSWORD="YOUR_REDIS_KEY"
REDIS_DB=0

# Azure Storage (Blob Storage)
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=clauseforgestorage;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net"
AZURE_STORAGE_ACCOUNT_NAME="clauseforgestorage"
AZURE_STORAGE_ACCOUNT_KEY="YOUR_STORAGE_KEY"
AZURE_STORAGE_CONTAINER_NAME="contracts"

# Azure Document Intelligence (Form Recognizer)
AZURE_DOC_INTEL_ENDPOINT="https://clauseforge-doc-intel.cognitiveservices.azure.com/"
AZURE_DOC_INTEL_KEY="YOUR_DOC_INTEL_KEY"

# Azure Service Bus (optional - for background tasks)
AZURE_SERVICE_BUS_CONNECTION_STRING="Endpoint=sb://clauseforge-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR_SERVICE_BUS_KEY"
AZURE_SERVICE_BUS_QUEUE_NAME="document-processing"

# AI Services
ANTHROPIC_API_KEY="sk-ant-YOUR_ANTHROPIC_KEY"
OPENAI_API_KEY="sk-YOUR_OPENAI_KEY"
EMBEDDING_PROVIDER="openai"
LLM_PROVIDER="anthropic"
USE_BEDROCK="false"

# Stripe
STRIPE_SECRET_KEY="sk_live_YOUR_STRIPE_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_STRIPE_PUBLISHABLE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"
STRIPE_PRO_PRICE_ID="price_YOUR_PRO_PRICE_ID"
STRIPE_ENTERPRISE_PRICE_ID="price_YOUR_ENTERPRISE_PRICE_ID"

# CORS
BACKEND_CORS_ORIGINS='["https://your-frontend-domain.com","https://your-static-web-app.azurestaticapps.net"]'

# File upload limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES='[".pdf", ".docx", ".doc"]'

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Security
ENABLE_VIRUS_SCANNING="true"
SECURITY_HEADERS_ENABLED="true"

# Audit logging
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING="true"

# JWT
JWT_SECRET="YOUR_JWT_SECRET_KEY"

# Legacy AWS settings (remove after migration)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# S3_BUCKET_NAME=""
# SQS_QUEUE_URL=""